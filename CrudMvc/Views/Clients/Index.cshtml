@*@model IEnumerable<CrudMvc.Models.Client>*@
@*@model X.PagedList.PagedList<CrudMvc.Models.ViewModels.ClientViewModel>*@
@using X.PagedList.Mvc.Core;
@model X.PagedList.PagedList<CrudMvc.Models.Client>


@{
    ViewData["Title"] = "Clientes";
}
@*https://stackoverflow.com/questions/41517359/pagedlist-core-mvc-pagedlistpager-html-extension-in-net-core-is-not-there*@
@*https://github.com/TroyGoode/PagedList*@
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
                @*Nome*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
                @*Email*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Cpf)
                @*CPF*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IsActive)
                @*Ativo*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))


